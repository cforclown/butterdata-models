{
  "include": [
    "src",
  ],
  "exclude": [ 
    "node_modules" 
  ],
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "DOM"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src",
    ],
    "outDir": ".",
    "declaration": true,
    "strict": true
  }
}
